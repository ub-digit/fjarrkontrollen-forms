<h2>{{t 'home.step2.article.header'}}</h2>
<div class="row">
  <div class="col-xs-12">
    <div class="alert alert-info" role="alert">
      {{{t 'home.step2.article.price'}}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <dl class="dl-horizontal">
        <dt>{{t 'home.orderDetails.article.articleTitle'}}:</dt>
        <dd>{{applicationController.orderDetails.article.articleTitle}}</dd>
        <dt>{{t 'home.orderDetails.article.authors'}}:</dt>
        <dd>{{applicationController.orderDetails.article.authors}}</dd>
        <dt>{{t 'home.orderDetails.article.journalTitle'}}:</dt>
        <dd>{{applicationController.orderDetails.article.journalTitle}}</dd>
        <dt>{{t 'home.orderDetails.article.issn'}}:</dt>
        <dd>{{applicationController.orderDetails.article.issn}}</dd>
        <dt>{{t 'home.orderDetails.article.publicationYear'}}:</dt>
        <dd>{{applicationController.orderDetails.article.publicationYear}}</dd>
        <dt>{{t 'home.orderDetails.article.issue'}}:</dt>
        <dd>{{applicationController.orderDetails.article.issue}}</dd>
        <dt>{{t 'home.orderDetails.article.volume'}}:</dt>
        <dd>{{applicationController.orderDetails.article.volume}}</dd>
        <dt>{{t 'home.orderDetails.article.pages'}}:</dt>
        <dd>{{applicationController.orderDetails.article.pages}}</dd>
    </dl>
  </div>
</div>

<h4>{{t 'home.step2.otherDetailsText'}}</h4>
<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <label class="control-label">{{t 'home.orderDetails.article.notValidAfter'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.article.notValidAfter}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <label class="control-label">{{t 'home.orderDetails.article.comment'}}</label>
      {{textarea classBinding=":form-control" value=applicationController.orderDetails.article.comment}}
    </div>
  </div>
</div> <!-- end row -->
