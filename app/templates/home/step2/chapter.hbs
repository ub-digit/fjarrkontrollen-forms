<h2>{{t 'home.step2.chapter.header'}}</h2>
<p>{{t 'home.step2.chapter.price'}}</p>
<div class="row">
  <div class="col-xs-12">
    <div  class="form-group {{if isChapterTitleValid '' 'has-error'}}">
      <label class="control-label">{{t 'home.orderDetails.chapter.chapterTitle'}}  <i class="fa fa-asterisk mandatory"></i></label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.chapterTitle}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div  class="form-group {{if isBookTitleValid '' 'has-error'}}">
      <label class="control-label">{{t 'home.orderDetails.chapter.bookTitle'}}  <i class="fa fa-asterisk mandatory"></i></label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.bookTitle}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.authors'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.authors}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.isbn'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.isbn}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div  class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.publicationYear'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.publicationYear}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.pages'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.pages}}
    </div>
  </div>
</div> <!-- end row -->
<h3>{{t 'home.step2.otherDetailsText'}}</h3>
<div class="row">
  <div class="col-xs-12">
    <div class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.notValidAfter'}}</label>
      {{input type='text' class="form-control" value=applicationController.orderDetails.chapter.notValidAfter}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class={{"form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.chapter.comment'}}</label>
      {{textarea class="form-control" value=applicationController.orderDetails.chapter.comment}}
    </div>
  </div>
</div> <!-- end row -->
<div class="row">
  <div class="col-xs-12">
    <div class="pull-right mandatory-text">
      <p class="{{if isFormComplete 'ok' 'text-danger'}}"><i class="fa fa-asterisk mandatory"></i> {{t 'home.step2.mandatoryText'}}</p>
    </div>
  </div>
</div> <!-- end row -->
<div class="row">
  <div class="col-xs-12 next-prev">
    <button {{action 'back'}} class={{"btn btn-link"}}><i class="fa fa-chevron-left"></i> {{t 'home.step2.prevBtn'}}</button>
    <button {{action 'nextStep'}} disabled={{unless isFormComplete 'disabled'}} class="btn btn-primary pull-right {{if isFormComplete 'enabled' 'disabled'}}">{{t 'home.step2.nextBtn'}} <i class="fa fa-chevron-right"></i></button>
  </div>
</div>
