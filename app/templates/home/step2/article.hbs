<h3>{{t 'home.step2.article.header'}}</h3>

<h4>{{t 'home.step2.article.subHeader1'}}</h4>
<div class="row">
  <div class="col-xs-9">
    <div {{bind-attr class=":form-group errors.links:has-error"}}>
      {{input type='text' classBinding=":form-control" value=pubMedId}}
    </div>
  </div>
  <div class="col-xs-3">
    <button {{action 'getPubMedId' pubMedId}} {{ bind-attr class=":btn :btn-default isPumedButtonEnabled:enabled:disabled"}}>{{t 'home.step2.article.getPubMedBtn'}}</button>
  </div>
</div>
{{#if error}}
<div class="row">
  <div class="col-xs-12">
    <div class="alert alert-danger" role="alert">{{t 'home.step2.article.pubMedError'}}</div>
  </div>
</div> <!-- end row -->
{{/if}}

<h4>{{t 'home.step2.article.subHeader2'}}</h4>

<div class="row">
  <div class="col-xs-12">
    <div {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.article.articleTitle'}}</label>
