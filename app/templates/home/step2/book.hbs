<h3>{{t 'home.step2.book.header'}}</h3>

<div class="row">
  <div class="col-xs-12">
    <span {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.book.bookTitle'}}*</label>
      {{input type='text' classBinding=":form-control" value=controllers.application.orderDetails.book.bookTitle}}
    </span>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <span {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.book.authors'}}*</label>
      {{input type='text' classBinding=":form-control" value=controllers.application.orderDetails.book.authors}}
    </span>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <span {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.book.isbn'}}</label>
      {{input type='text' classBinding=":form-control" value=controllers.application.orderDetails.book.isbn}}
    </span>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class="checkbox">
      <label>
        {{input type='checkbox' checked=controllers.application.orderDetails.book.outsideNordics}} {{t 'home.orderDetails.book.outsideNordics'}}
      </label>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="checkbox">
      <label>
        {{input type='checkbox' checked=controllers.application.orderDetails.book.allowCopy}} {{t 'home.orderDetails.book.allowCopy'}}
      </label>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.book.notValidAfter'}}</label>
      {{input type='text' classBinding=":form-control" value=controllers.application.orderDetails.book.notValidAfter}}
    </div>
  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div {{bind-attr class=":form-group"}}>
      <label class="control-label">{{t 'home.orderDetails.book.comment'}}</label>
      {{textarea classBinding=":form-control" value=controllers.application.orderDetails.book.comment}}
    </div>
  </div>
</div> <!-- end row -->
<div class="row">
  <div class="col-xs-12">
    <button {{action 'back'}} {{ bind-attr class=":btn :btn-link"}}>{{t 'home.step2.prevBtn'}}</button>
    <button {{action 'nextStep'}} {{bind-attr class=":btn :btn-primary :pull-right isNextEnabled:enabled:disabled"}}>{{t 'home.step2.nextBtn'}}</button>
  </div>
</div>
