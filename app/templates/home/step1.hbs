
<h3>{{t 'home.step1.typeHeader'}}</h3>
<div class="row vertical-space-bottom-20">
	<div class="col-xs-12">
		{{view "select" class="form-control"
		   content=controllers.application.orderTypes
		   optionValuePath="content.id"
		   optionLabelPath="content.title"
		   selection=controllers.application.selectedOrdertype
		   prompt=(t 'home.step1.typeHeader')
		}}
	</div>
</div>

<h3>{{t 'home.step1.locationHeader'}}</h3>
<div class="row vertical-space-bottom-20">
	<div class="col-xs-12">
		{{view "select" class="form-control"
		   content=controllers.application.locations
		   optionValuePath="content.id"
		   optionLabelPath="content.title"
		   selection=controllers.application.selectedLocation
		   prompt=(t 'home.step1.locationHeader')
		}}
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<button {{action 'resetForm'}} {{ bind-attr class=":btn :btn-default"}}>Avbryt</button>
		{{#link-to 'home.step2' classNames="btn btn-primary pull-right"}}{{t 'home.step1.nextBtn'}}{{/link-to}}
        
	</div>
</div>



