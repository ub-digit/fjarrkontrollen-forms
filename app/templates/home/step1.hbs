<h2>{{t 'home.step1.subHeader1'}}</h2>
<div class="row">
  <div class="col-xs-12">
    <label for="typeSelector">{{t 'home.step1.typeHeader'}}</label>
    {{#x-select class="form-control" on-change=(action 'handleSelectType') value=applicationController.selectedOrderType as |item|}}
      {{#item.option}}{{t 'home.step1.typePrompt'}}{{/item.option}}
      {{#each applicationController.orderTypes as |type|}}
        {{#item.option value=type}}
          {{#if isEnglish}}
           <strong>{{type.title_en}}</strong>
          {{else}}
           <strong>{{type.title_sv}}</strong>
          {{/if}}
        {{/item.option}}
      {{/each}}
    {{/x-select}}
  </div>
</div>

<div class="row vertical-space-bottom-20">
  <div class="col-xs-12">
    <label for="locationSelector">{{t 'home.step1.locationHeader'}}</label>
    {{#x-select class="form-control" on-change=(action 'handleSelectLocation') value=applicationController.selectedLocation as |item|}}
    {{#item.option}}{{t 'home.step1.locationPrompt'}}{{/item.option}}
    {{#each applicationController.locations as |location|}}
      {{#item.option value=location}}
        {{#if isEnglish}}
         <strong>{{location.title_en}}</strong>
        {{else}}
         <strong>{{location.title_sv}}</strong>
        {{/if}}
      {{/item.option}}
    {{/each}}
  {{/x-select}}
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <button {{action 'nextStep'}} id="step1NextButton" disabled={{unless isFormComplete 'disabled'}}  class={{"btn btn-primary pull-right isFormComplete:enabled:disabled"}}>{{t 'home.step1.nextBtn'}} <i class="fa fa-chevron-right"></i></button>
  </div>
</div>
