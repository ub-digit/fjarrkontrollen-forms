
<h2>{{t 'home.step1.subHeader1'}}</h2>
<div class="row">
	<div class="col-xs-12">
		<label for="typeSelector">{{t 'home.step1.typeHeader'}}</label>
		{{#power-select
				class='form-control'
				options=applicationController.orderTypes
				selected=applicationController.selectedOrderType
				placeholder=(t 'home.step1.typePrompt')
				searchEnabled=false
				onchange=(action "handleSelectType")
			  as |type|}}
			  {{#if isEnglish}}
			   <strong>{{type.title_en}}</strong>
			  {{else}}
			   <strong>{{type.title_sv}}</strong>
			  {{/if}}
		{{/power-select}}
	</div>
</div>

<div class="row vertical-space-bottom-20">
	<div class="col-xs-12">
		<label for="locationSelector">{{t 'home.step1.locationHeader'}}</label>
		{{#power-select

				options=applicationController.locations
				selected=applicationController.selectedLocation
				placeholder=(t 'home.step1.locationPrompt')
				searchEnabled=false
				onchange=(action "handleSelectLocation")
			  as |location|}}
			  {{#if isEnglish}}
			   <strong>{{location.title_en}}</strong>
			  {{else}}
			   <strong>{{location.title_sv}}</strong>
			  {{/if}}
		{{/power-select}}
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<button {{action 'nextStep'}} id="step1NextButton" disabled={{unless isFormComplete 'disabled'}}  class={{"btn btn-primary pull-right isFormComplete:enabled:disabled"}}>{{t 'home.step1.nextBtn'}} <i class="fa fa-chevron-right"></i></button>
	</div>
</div>
