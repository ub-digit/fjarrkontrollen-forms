{{#if model.error}}
<h3>{{t 'home.step5.errorHeader'}}</h3>
<div class="row">
	<div class="col-xs-12" >
		<div class="alert alert-danger" role="alert">
		  {{t 'home.step5.errorMessage'}}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 next-prev">
        <button {{action 'resetForm'  }} {{ bind-attr class=":btn :btn-primary isDisabled:disabled"}}>{{t 'home.step5.back'}}</button>
	</div>
</div>
{{else}}
<h3>{{t 'home.step5.confirmationHeader'}}</h3>

<div class="row">
	<div class="col-xs-12">
		<p>{{t 'home.step5.confirmationMessage'}}</p>
		<h4>{{model.orderNumber}}</h4>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 next-prev">
        <button {{action 'resetForm'  }} {{ bind-attr class=":btn :btn-primary isDisabled:disabled"}}>{{t 'home.step5.orderOneMore'}}</button>
	</div>
</div>
{{/if}}