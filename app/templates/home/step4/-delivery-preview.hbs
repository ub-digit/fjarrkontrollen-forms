<h4>{{t 'home.step4.deliveryOptionsSubheader'}}</h4>
<!-- Om leveranssätt är skickas -->
{{#if isDeliveryTypeShipping}}

<p>{{t 'home.step4.shippingInfoText'}}</p>

<table class="table table-striped">
  <tbody>
    <tr>
      <td>Företag</td>
      <td>{{controllers.application.deliveryDetails.company}}</td>
    </tr>
    <tr>
      <td>Namn</td>
      <td>{{controllers.application.deliveryDetails.name}}</td>
    </tr>
    <tr>
      <td>Gatuadress/Box</td>
      <td>{{controllers.application.deliveryDetails.address}}</td>
    </tr>
    <tr>
      <td>Ort</td>
      <td>{{controllers.application.deliveryDetails.city}}</td>
    </tr>
  </tbody>
</table>

{{else}}

<p>{{t 'home.step4.pickupInfoText'}} {{controllers.application.selectedLocation.title}}</p>

{{/if}}
