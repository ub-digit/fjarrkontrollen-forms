<h4>{{t 'home.step4.deliveryOptionsSubheader'}}</h4>
<!-- Om leveranssätt är skickas -->
{{#if isDeliveryTypeShipping}}

<p>{{t 'home.step4.shippingInfoText'}}</p>

<table class="table table-striped">
  <tbody>
    {{#if controllers.application.deliveryDetails.box}}
    <tr>
      <td>{{t 'home.deliveryDetails.box'}}</td>
      <td>{{controllers.application.deliveryDetails.box}}</td>
    </tr>
    <tr>
      <td>{{t 'home.deliveryDetails.comment'}}</td>
      <td>{{controllers.application.deliveryDetails.comment}}</td>
    </tr>
    {{else}}
    <tr>
      <td>{{t 'home.deliveryDetails.address'}}</td>
      <td>{{controllers.application.deliveryDetails.address}}</td>
    </tr>
    <tr>
      <td>{{t 'home.deliveryDetails.postalCode'}}</td>
      <td>{{controllers.application.deliveryDetails.postalCode}}</td>
    </tr>
    <tr>
      <td>{{t 'home.deliveryDetails.city'}}</td>
      <td>{{controllers.application.deliveryDetails.city}}</td>
    </tr>
    {{/if}}
  </tbody>
</table>

{{else}}

<p>{{t 'home.step4.pickupInfoText'}} {{selectedLibraryNameString}}</p>

{{/if}}
