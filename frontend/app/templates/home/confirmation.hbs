<h2>{{t 'home.confirmation.confirmationHeader'}}</h2>

<div class="row vertical-space-bottom-20">
  <div class="col-xs-12">
    <p>{{t 'home.confirmation.confirmationMessage'}}</p>
    <span class="order-ref-number">{{model.id}}</span>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 next-prev">
