  </div>
</div> <!-- end row -->

<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <label class="control-label">{{t 'home.orderDetailsChapter.comment'}}</label>
      {{textarea class="form-control" value=applicationController.orderDetailsChapter.comment}}
    </div>
  </div>
</div> <!-- end row -->
