<h2>{{t 'home.orderDetails.chapter.header'}}</h2>
<div class="row">
  <div class="col-xs-12">
    <dl class="dl-horizontal">
      <dt>{{t 'home.orderDetailsChapter.chapterTitle'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.chapterTitle}}</dd>
      <dt>{{t 'home.orderDetailsChapter.bookTitle'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.bookTitle}}</dd>
      <dt>{{t 'home.orderDetailsChapter.authors'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.authors}}</dd>
      <dt>{{t 'home.orderDetailsChapter.isbn'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.isbn}}</dd>
      <dt>{{t 'home.orderDetailsChapter.publicationYear'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.publicationYear}}</dd>
      <dt>{{t 'home.orderDetailsChapter.pages'}}:</dt>
      <dd>{{applicationController.orderDetailsChapter.pages}}</dd>
