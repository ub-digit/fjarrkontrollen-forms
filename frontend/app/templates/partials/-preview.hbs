<h2>{{t 'home.summary.header'}}</h2>
<div class="row">
  <div class="col-xs-12">
    <h3>{{t 'home.summary.orderDetailsSubheader'}}</h3>
    <div class="row">
      <div class="col-xs-12">
        {{partial orderPreviewPartialName}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{partial 'partials/customer-preview'}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{partial 'partials/delivery-preview'}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        {{partial 'partials/invoicing-preview'}}
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 next-prev">
        <button {{action 'back'}}  class="btn btn-link"><i class="fa fa-chevron-left"></i> {{t 'home.summary.prevBtn'}}</button>
        <button {{action 'save'}}  class="btn btn-success pull-right">{{t 'home.summary.nextBtn'}}</button>
      </div>
    </div>
  </div>
</div>
