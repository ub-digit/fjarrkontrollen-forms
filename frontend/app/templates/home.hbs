<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    <h1>{{t 'home.headers.mainHeader'}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 step-indicator disabled">
    <ol>
      {{#unless applicationController.isSFX}}
        {{#link-to 'home.order-type' disabled=true tagName='li'}}<span>{{t 'home.orderType.header'}}</span>{{/link-to}}
      {{/unless}}
      {{#if auth.required}}
        {{#link-to 'home.login' disabled=true tagName='li'}}<span>{{t 'home.login.header'}}</span>{{/link-to}}
      {{/if}}
      {{#unless applicationController.isSFX}}
        {{#link-to 'home.order-details' disabled=true tagName='li'}}<span>{{t 'home.orderDetails.header'}}</span>{{/link-to}}
      {{/unless}}
      {{#link-to 'home.customer-details' disabled=true tagName='li'}}<span>{{t 'home.customerDetails.header'}}</span>{{/link-to}}
      {{#link-to 'home.summary' disabled=true tagName='li'}}<span>{{t 'home.summary.header'}}</span>{{/link-to}}
      {{#link-to 'home.step5' disabled=true tagName='li'}}<span>{{t 'home.step5.header'}}</span>{{/link-to}}
    </ol>
  </div>
  <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
    {{outlet}}
  </div>
</div>
